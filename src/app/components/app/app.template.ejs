</head>

<body class="app__base">

    <%- include ../header/header.template.ejs %>

    <main class="app__main" id="main">
        <div class="card__root isLoading" id="root">
            <div class="card__cover" id="cover">
                <div class="card__coverCard"></div>
            </div>

            <div class="card__preview" id="preview">
                <div class="card__content" id="content">
                    <header class="card__header">
                        <div class="card__prop">
                            <input class="card__inputLine card__input--small card__headerLevel" placeholder="Lead, Senior, Mid-Level, Junior..." />
                        </div>

                        <div class="card__prop">
                            <button class="card__icon card__icon--editable card__headerIcon">‚≠ê</button>
                            <textarea rows="1" class="card__inputText card__input--big card__headerPosition" placeholder="Frontend Engineer, UX Designer..." style="height: 64px; "></textarea>
                        </div>
                    </header>

                    <ul class="card__props" id="general">
                        <li class="card__prop">
                            <span class="card__icon">üåé</span>
                            <textarea rows="1" class="card__inputText" placeholder="Remote (CET ¬± 4 hours)"></textarea>
                        </li>

                        <li class="card__prop">
                            <span class="card__icon">üí∂</span>
                            <textarea rows="1" class="card__inputText" placeholder="$150-200K"></textarea>
                        </li>

                        <li class="card__prop">
                            <span class="card__icon">üî•</span>
                            <textarea rows="1" class="card__inputText" placeholder="JS, ES6, React, TypeScript, Design Systems, Node.js, MongoDB, Python, AWS..." style="height: 56px; "></textarea>
                        </li>
                    </ul>

                    <ul class="card__props" id="additional">
                        <li class="card__prop">
                            <button class="card__icon card__icon--editable">¬∑</button>
                            <textarea rows="1" class="card__inputText" placeholder="Add additional information about this role."></textarea>
                        </li>
                    </ul>

                    <footer class="card__footer">
                        <button class="card__icon card__icon--editable card__footerIcon">
                            <img hidden src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVQYV2NgYGD4DwABBAEAcCBlCwAAAABJRU5ErkJggg==" class="card__iconLogo" alt="Your Company's Logo" />
                            <span class="card__iconLogoPlaceholder" id="placeholderLogo">üè¢</span>
                        </button>

                        <div class="card__inputLine card__input--small card__input--resizer card__footerInput"></div>

                        <input class="card__inputLine card__input--small card__input--resizable card__footerInput" placeholder="Your Company" style="width: 117px;" />
                        <input class="card__inputLine card__input--small card__footerInput" placeholder="careers@yourcompany.com" />
                    </footer>
                </div>

                <div class="card__attribution">Get yours at https://danziger.github.io/jobjs/</div>
            </div>

        </div>

        <div class="app__error" id="errorBox" hidden>Oops, something went wrong. Please, try with a different browser.</div>
    </main>

    <div class="app__coverLeft"></div>
    <div class="app__coverRight"></div>

    <%- include ../footer/footer.template.ejs %>

</body>
</html>
